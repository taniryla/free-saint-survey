<%- include('../partials/header') %>

<table id="recipe-list">
  <thead>
    <tr>
      <th>Recipe Name </th>
      <th>Description </th>
      <th>Recipe Category </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% recipes.forEach(function(r) { %>
      <tr>
        <td><%= r.recipeName %></td>
        <td><%= r.description %></td>
        <div><%= r.recipeCategory %></div>
        <td><a href="/recipes/<%= r._id %>">DETAILS</a></td>
      </tr>
      <% }); %>
    </tbody>
  </table>
  
<%- include('../partials/footer') %>