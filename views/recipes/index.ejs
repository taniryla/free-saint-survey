<%- include('../partials/header') %>

    <div style="max-width: 100vh; min-width: 50vh; min-height: 50vh;" class="row align-items-center g-5 py-4 mb-4 float-center">">
        <img src="https://i.imgur.com/gY1YRd3.png" alt="healthy recipes" loading="lazy" width="687" height="510" class="d-block mx-lg-auto mb-4 img-fluid">
    </div><br>
    <div style="font-size: small;" class="d-grid g-2 d-md-flex ml-4 justify-content-lg-start">
        <a href="/recipes/61f4329b477105fdc5abbdb5 " class="btn btn-primary btn-dark btn-ms me-md-2 ml-4 ">Hot Hot Recipes</a>
        <a href="/recipes/61f4329b477105fdc5abbdb5 " class="btn btn-outline-secondary btn-dark btn-ms me-md-2 ">Something Random</a>
    </div><br><br><br>

    <div class="row">
        <h3 id="onestop" class="display-5 fw-bold ml-2"> A One-Stop Destination For Healthy Recipes</h3>
        <p id="datascience" class="mb-5 mt-4 ml-2 col-md-8">
            We use data science in every aspect of our lives these days. Like we use Spotify to "figure out " what music we like. Why not take the same approach to dieting, exercise and other health related choices.
        </p>
    </div><br><br>

    <div id="slider3 " class="row carousel slide mb-5 ml-1" data-ride="carousel">
        <ol class="carousel-indicators col-sm-6">
            <li class="active " data-target="#slider3 " data-slide-to="0 "></li>
            <li data-target="#slider3 " data-slide-to="1 "></li>
            <li data-target="#slider3 " data-slide-to="2 "></li>
            <li data-target="#slider3 " data-slide-to="3 "></li>
            <li data-target="#slider3 " data-slide-to="4 "></li>
            <li data-target="#slider3 " data-slide-to="5 "></li>
            <li data-target="#slider3 " data-slide-to="6 "></li>
        </ol>
        <div class="carousel-inner ">
            <div class="carousel-item active ">
                <img class="d-block img-fluid " src="https://i.imgur.com/LqXrEis.jpg " alt="vegan recipe " loading="lazy ">
                <div class="pt-1 ml-4 mb-4 ">Vegan Foods</div>
            </div>
            <div class="carousel-item ">
                <img class="d-block img-fluid " src="https://i.imgur.com/vhfjcYM.jpg " alt="pegan recipe ">
                <div class="pt-1 ml-4 mb-4 ">Pegan Foods</div>
            </div>
            <div class="carousel-item ">
                <img class="d-block img-fluid " src="https://i.imgur.com/JuR2ehr.jpg " alt="mediterranean recipe ">
                <div class="pt-1 ml-4 mb-4 ">Mediterranean Foods</div>
            </div>
            <div class="carousel-item ">
                <img class="d-block img-fluid " src="https://i.imgur.com/vHwL1VB.jpg " alt="keto recipe ">
                <div class="pt-1 ml-4 mb-4 ">Keto Foods</div>
            </div>
            <div class="carousel-item ">
                <img class="d-block img-fluid " src="https://i.imgur.com/Yxpa3BB.jpg " alt="golo recipe ">
                <div class="pt-1 ml-4 mb-4 ">Golo Foods</div>
            </div>
            <div class="carousel-item ">
                <img class="d-block img-fluid " src="https://i.imgur.com/XQVAypW.jpg " alt="prolon recipe ">
                <div class="pt-1 ml-4 mb-4 ">Prolon Foods</div>
            </div>
        </div>
        <a href="#slider3 " class="carousel-control-prev " data-slide="prev ">
            <span class="carousel-control-prev-icon "></span>
        </a>
        <a href="#slider3 " class="carousel-control-next " data-slide="next ">
            <span class="carousel-control-next-icon "></span>
        </a>
    </div>



    <table id="recipe-list" style="overflow-y: scroll;">
        <thead>
            <tr>
                <th>Recipe Name </th>
                <th>Description </th>
                <th>Recipe Category </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% recipes.forEach(function(r) { %>
                <tr>
                    <td>
                        <%= r.recipeName %>
                    </td>
                    <td>
                        <%= r.description %>
                    </td>
                    <div>
                        <%= r.recipeCategory %>
                    </div>
                    <td><a href="/recipes/<%=r ._id %>">DETAILS</a>
                    </td>
                </tr>
                <% }); %>
        </tbody>
    </table>

    <%- include('../partials/footer') %>