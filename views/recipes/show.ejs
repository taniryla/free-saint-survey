<%- include('../partials/header') %>

<section id="recipes-show-page">
  <div>Recipe Name: </div>
  <div><%= recipe.recipeName %></div>
  <div>Email: </div>
  <div><%= recipe.email %></div>
  <div>Description: </div>
  <div><%= recipe.description %></div>
  <div>Recipe Category: </div>
  <select name="category">
    <option value="vegan" selected>Vegan</option>
    <option value="keto">Keto</option>
    <option value="mediterranean">Mediterranean</option>
    <option value="golo">Golo</option>
    <option value="pegan" >Pegan</option>
    <option value="prolon" >Prolon</option>
  </select>
  <img src="" alt="<%= recipe.recipeName %>"> 
  <!-- ask Jim how to add the photos -->
  <div>Recipe Text: </div>
  <div><%= recipe.recipeText %></div>
</section>
<form id="add-recipe-comment" action="/recipes/<%= recipe._id %>/new"  method="POST">
  <select name="comments">
    <%- recipe.map(r => %>
      `<option value="${r._id}">${r.name}</option>`
      <% ).join('') %>
  </select>
  <button type="submit">Add Comment</button>
</form>

<!-- subdocument Comments -->

<br><br><h2>Comments</h2>
<% if (user) { %>
  <form id="add-comment-form" method="POST"
    action="/recipes/<%= recipe._id %>/comments">
    <label>Comment:</label>
    <textarea name="textComments"></textarea>
    <input type="submit" value="Add Comment">
  </form>
<% } %>

<% if (recipe.comments.length) { %>
  <table>
    <thead>
        
          <% total += p.count %> 
          <!-- double check this count -->
      <tr>
        <th>User</th>
        <th>Date</th>
        <th>Review</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% recipe.comments.forEach(function(r) { %>
        <tr>
          <td class="comment-user"><img alt="avatarComment" src="<%= r.userAvatar %>"><%= r.userName %></td>
          <td><%= r.createdAt.toLocaleDateString() %></td>
          <td><%= r.textComments %></td>
          <td>
            <% if (user && user._id.equals(r.user)) { %>
              <form action="/comments/<%= r._id %>?_method=DELETE" method="POST">
                <button type="submit">X</button>
              </form>
            <% } %>
          </td>
        </tr>
      <% }); %>
      <tr>
        <td colspan="3"></td>
      </tr>
    </tbody>
  </table>
<% } else { %>
  <h5>No Comments Yet</h5>
<% } %>
  
<%- include('../partials/footer') %>