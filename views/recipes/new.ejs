<%- include('../partials/header') %>

<form id="new-recipe-form" action="/recipes/new" method="POST">
  <label>Recipe Name:</label>
  <input type="text" name="recipeName">
  <label>Submitter's Email: </label>
  <input type="text" name="email">
  <label>Description:</label>
  <input type="text" name="description">
  <label>Recipe Category:</label>
  <select name="recipeCategory">
    <option value="vegan" selected>Vegan</option>
    <option value="keto">Keto</option>
    <option value="mediterranean">Mediterranean</option>
    <option value="golo">Golo</option>
    <option value="pegan">Pegan</option>
    <option value="prolon">Prolon</option>
  </select>
  <label>Add Receipt Below:</label>
  <input type="text" name="recipeText"><br>
  <br>
  <label>Insert Recipe Image:</label><br><br>
  <input type="image" src="image_submit.gif" alt="Submit" width="48" height="48">
  <br><br>
  <button type="submit">Add Recipe</button>
  
</form>



<%- include('../partials/footer') %>