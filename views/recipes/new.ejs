<%- include('../partials/header') %>

    <form class="form-group" id="new-recipe-form" action="/recipes" method="POST">
        <div class="form-row">
            <div class="col">
                <input type="text" name="title" class="form-control" placeholder="Recipe Name">
            </div>
        </div><br>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="email">Submitter's Email</label>
                <input type="email" id="email" name="email" class="form-control" placeholder="sample@gmail.com">
            </div>
        </div><br>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="description">Description</label>
                <input style="width: 80vmin;" type="description" id="description" name="description" class="form-control" placeholder="Tell us something about this recipe">
            </div>
        </div><br>
        <label>Recipe Category:</label><br>
        <select name="category">
            <option value="Vegan">Vegan</option>
             <option value="Keto">Keto</option>
            <option value="Mediterranean">Mediterranean</option>
            <option value="Golo">Golo</option>
            <option value="Pegan">Pegan</option>
            <option value="Prolon">Prolon</option>
      </select><br>
        <label>Add Receipt Below:</label><br>
        <textarea name="fullrecipe" cols="30" rows="10"></textarea>
        <br><br>
        <button type="submit" style="width: 80vmin; font-size: medium; text-align: center;" class="btn btn-success btn-lg float-center">Add Recipe</button>

    </form>



    <%- include('../partials/footer') %>