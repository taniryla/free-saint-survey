<%- include('../partials/header') %>

    <form id="new-recipe-form" action="/recipes" method="POST">
        <label>Recipe Name:</label>
        <input type="text" name="title">
        <label>Submitter's Email: </label>
        <input type="text" name="email">
        <label>Description:</label>
        <input type="text" name="description">
        <label>Recipe Category:</label>
        <select name="category">
            <option value="Vegan">Vegan</option>
             <option value="Keto">Keto</option>
            <option value="Mediterranean">Mediterranean</option>
            <option value="Golo">Golo</option>
            <option value="Pegan">Pegan</option>
            <option value="Prolon">Prolon</option>
      </select>
        <label>Add Receipt Below:</label>
        <textarea name="fullrecipe" cols="30" rows="10"></textarea>
        <br><br>
        <button type="submit">Add Recipe</button>

    </form>



    <%- include('../partials/footer') %>