<%- include('../partials/header') %>

    <section id="providers-show-page" class="ml-10">
        <div>Name: </div>
        <div>
            <%= provider.name %>
        </div>
        <div>Service: </div>
        <select name="service" style="width: 40vmin;">
    <option value="endocrinologist">Endocrinologist</option>
    <option value="healthCoach">Health Coach</option>
    <option value="nutritionist">Nutritionist</option>
    <option value="accupunturist">Accupunturist</option>
    <option value="personalTrainer" >Personal Trainer</option>
    <option value="embodiment" >Embodiment Coach</option>
    <option value="sleepExpert" >Sleep Expert</option>
  </select>
        <div>Email: </div>
        <div>
            <%= provider.email %>
        </div>
        <div>Address: </div>
        <section>
            <div>
                <%= provider.address.street %>
            </div>
            <div>
                <%= provider.address.city %>
            </div>
            <div>
                <%= provider.address.state %>
            </div>
            <div>
                <%= provider.address.zip %>
            </div>
            <form method="GET" action="/providers/new">
                <input style="width: 50vmin; font-size: medium; text-align: center;" type="submit" value="Add New Provider" class="btn btn-success btn-lg float-center">
            </form>
        </section>


    </section>


    <!-- subdocument Reviews -->

    <br><br>
    <h2 id="reviewh2">Reviews</h2><br>
    <% if (user) { %>
        <form id="add-review-form" method="POST" action="/providers/<%= provider._id %>/reviews">
            <label>Review:</label>
            <textarea name="text" style="width: 40vmin;"></textarea>
            <label>Rating:</label>
            <div id="stars" class="container d-flex justify-content-center mt-200">
                <div class="row">
                    <div class="col-md-12">
                        <div class="stars">
                            <form action=""> <input class="star star-5" id="star-5" type="radio" name="star" /> <label class="star star-5" for="star-5"></label> <input class="star star-4" id="star-4" type="radio" name="star" /> <label class="star star-4" for="star-4"></label>                                <input class="star star-3" id="star-3" type="radio" name="star" /> <label class="star star-3" for="star-3"></label> <input class="star star-2" id="star-2" type="radio" name="star" /> <label class="star star-2" for="star-2"></label>                                <input class="star star-1" id="star-1" type="radio" name="star" /> <label class="star star-1" for="star-1"></label> </form>
                        </div>
                    </div>
                </div>
            </div>
            <input style="width: 50vmin; font-size: medium; text-align: center;" type="submit" value="Add Review" class="btn btn-success btn-lg float-center">
        </form>
        <% } %>

            <% if (provider.reviews.length) { %>
                <table id="reviewlayout" class="table table-hover"><br><br><br>
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Date</th>
                            <th>Review</th>
                            <th>Rating</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% let total = 0 %>
                            <% provider.reviews.forEach(function(p) { %>
                                <% total += p.rating %>
                                    <tr>
                                        <td class="review-user"><img alt="avatarReviews" src="<%= p.userAvatar %>">
                                            <%= p.userName %>
                                        </td>
                                        <td>
                                            <%= p.createdAt.toLocaleDateString() %>
                                        </td>
                                        <td>
                                            <%= p.text %>
                                        </td>
                                        <td>
                                            <%= p.rating %>
                                        </td>
                                        <td>
                                            <% if (user && user._id.equals(p.user)) { %>
                                                <form action="/reviews/<%= p._id %>?_method=DELETE" method="POST">
                                                    <button type="submit">X</button>
                                                </form>
                                                <% } %>
                                        </td>
                                    </tr>
                                    <% }); %>
                                        <tr>
                                            <td colspan="3"></td>
                                            <td><strong><%= (total / provider.reviews.length).toFixed(1) %></strong></td>
                                        </tr>
                    </tbody>
                </table>
                <% } else { %>
                    <h5>No Reviews Yet</h5>
                    <% } %>

                        <%- include('../partials/footer') %>