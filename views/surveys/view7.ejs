<%- include('../partials/header') %>

    <div class="containerview">
        <img class="containerviewphoto float-left" src="https://i.imgur.com/N0YkklO.png" alt="doctor with open arms">
        <div class="rightcontainer bg-white jumbotron jumbotron-fluid text-center">
            <div class="text-box container display-4 text-center">
                <form method="POST" action="/surveys/view7/<%= survey._id %>">
                    <fieldset>
                        <legend style="font-size: 1.3rem;" class="text-center form-check">Are you at risk for the following? (Continued from last screen)
                            <legend><br>
                                <div class="checkbox">
                                    <input class="form-check-input" type="checkbox" name="healthrisks2" <%= survey.healthrisks2.includes( 'high cholesterol') && 'checked' %> value="high cholesterol"> high cholesterol<br>
                                    <input class="form-check-input" type="checkbox" name="healthrisks2" <%= survey.healthrisks2.includes( 'kidney disease') && 'checked' %> value="kidney disease"> kidney disease<br>
                                    <input class="form-check-input" type="checkbox" name="healthrisks2" <%= survey.healthrisks2.includes( 'osteoarthritis') && 'checked' %> value="osteoarthritis"> osteoarthritis<br>
                                    <input class="form-check-input" type="checkbox" name="healthrisks2" <%= survey.healthrisks2.includes( 'depression') && 'checked' %> value="depression"> depression<br>
                                    <input class="form-check-input" type="checkbox" name="healthrisks2" <%= survey.healthrisks2.includes( 'insomnia') && 'checked' %> value="insomnia"> insomnia<br>
                                    <input class="form-check-input" type="checkbox" name="healthrisks2" <%= survey.healthrisks2.includes( 'none') && 'checked' %> value="none"> none<br>
                                    <input class="form-check-input" type="checkbox" name="healthrisks2" <%= survey.healthrisks2.includes( 'other (write below)') && 'checked' %> value="other (write below)"> other (write below)<br>
                                </div>
                                <div class="form-group">
                                    <textarea id="healthrisktextbox" value="healthtextarea" class="form-control float-center ml-20" style="height: 10vmin;" name="healthriskswritebelow" cols="30" rows="10"></textarea>
                                </div>
                    </fieldset>
                    <input type="submit" style="width: 50vmin; font-size: small;" class="btn btn-success btn-lg float-center mt-2" value="Save And Next">
                </form>
            </div>
            <div class="btn-box">
                <a href="/surveys/view6/<%= survey._id %>" class="btn btn-success btn-lg float-center mt-2" style="width: 50vmin; font-size: small;">Back</a>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>